{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
  },
  "include": ["./src/**/*"]
}
